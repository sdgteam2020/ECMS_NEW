@model EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <input hidden asp-for=EncryptedId />
    <div class="form-group row">
        <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="UserId" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DomainId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="DomainId" class="form-control">
            <span asp-validation-for="DomainId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="AdminFlag" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="AdminFlag" type="checkbox" class="form-check-input">
            <span asp-validation-for="AdminFlag" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Active" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Active" type="checkbox" class="form-check-input">
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRoles" asp-route-userId="@Model.EncryptedId" style="width:auto" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>User Claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ManageUserClaims" asp-route-userId="@Model.EncryptedId"
               style="width:auto" class="btn btn-primary">
                Manage Claims
            </a>
        </div>
    </div>
</form>