@model DTOProfileRequest
@{
    ViewData["Title"] = "Edit Profile";
}
<style>
    .row.mb-2.required .form-label::after {
        content: "*";
        color: red;
    }
</style>

<div class="container mt-4">
    <div class="card mb-3 ">
        <div class="card-header">
            <div class="row">
                <div class="col-xl-12 text-left">
                    <h3>
                        Edit Profile
                        <small class="text-muted"></small>
                    </h3>
                </div>
            </div>
        </div>
    <form asp-antiforgery="true" asp-controller="Account" asp-action="EditProfile" method="post" class="mt-3">
        <div class="card-body" style="min-height:150px;">
            <div class="row">
                    <input hidden asp-for="UserId" />
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row mb-2 mr-8 required">
                                <label asp-for="ArmyNo" class="col-sm-2 col-form-label form-label">Offrs Army No</label>
                                <div class="col-sm-3">
                                    <input asp-for="ArmyNo" class="form-control" placeholder="" readonly />
                                    <span asp-validation-for="ArmyNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-2 required">
                                <label asp-for="Name" class="col-sm-2 col-form-label form-label">Name</label>
                                <div class="col-sm-3">
                                    <input asp-for="Name" class="form-control" placeholder="" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-2 required">
                                <label asp-for="RankId" class="col-sm-2 col-form-label form-label">Rank</label>
                                <div class="col-sm-3">
                                    <select asp-for="RankId" class="form-select" asp-items="ViewBag.OptionsRank">
                                    </select>
                                    <span asp-validation-for="RankId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-2 required">
                                <label asp-for="IntOffr" class="col-sm-2 col-form-label form-label"> Int Offrs.</label>
                                <div class="col-sm-3">
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="IntOffr" value="true" id="intoffsyes" checked=@(Model.IntOffr == true?true:false)>
                                        <label class="form-check-label" for="intoffsyes">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="IntOffr" value="false" id="intoffsno" checked=@(Model.IntOffr == false?true:false)>
                                        <label class="form-check-label" for="intoffsno">
                                            No
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
    </div>
</div>
@section Scripts{
    <script src="~/developerjs/mtables.js"></script>
    <script>
        $(document).ready(function () {
            $('#FormationId').on('change', function () {
                mMsater(0, "ApptId", Appt, $('#FormationId').val());

            });
        });
    </script>
}