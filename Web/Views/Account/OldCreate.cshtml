@{
    ViewData["Title"] = "Create Draft";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mb-3 ">
        <div class="card-header">
            <input class="form-control d-none" type="text" id="armyNo" value=@ViewBag.armyNo>
            <span id="SpnTxnId" class="d-none">0</span>
            @*<span id="PtoId" class="d-none">0</span>*@
            <div class="row">
                <div class="col-xl-12 text-left">
                    <h3>
                       User Details
                        <small class="text-muted"> Page</small>

                      
                    </h3>
                </div>


            </div>
        </div>
   

        <div class="card-body" style="min-height:150px;">
            <div class="row">
                <div class="col-xl-12">
                    <div class="mb-2 d-md-flex justify-content-md-between align-items-md-center">
                        <h6 class="mb-3 mb-md-0">
                            Total Users <span id="lblTotal" class="ml-3 border border-light b px-2 py-1">0</span>
                        </h6>
                        <div>
                            <button type="button" id="btnAddUser" class="btn btn-outline-success font-weight-600 btn-sm">Add New User</button>
                            <button type="button" id="btnMultiDelete" class="btn btn-outline-danger cls-btnDelete font-weight-600 btn-sm">Delete</button>

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table border border-purple table-striped no-footer dataTable table-hover" role="grid" id="tblPartIIDraftOff">
                            <thead>
                                <tr>
                                    <th class="noExport d-none"></th>
                                    <th class="noExport wd-30-f">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="chkAll">
                                            <label class="custom-control-label font-weight-bold" for="chkAll"></label>
                                        </div>
                                    </th>
                                    <th class=" wd-30-f">SNo.</th>
                                    <th>Seniority</th>
                                    <th>UserId</th>
                                    <th>Appointment Name </th>
                                    <th class="nowrap">Role Name</th>
                                    <th class="nowrap">Action</th>
                                  

                                </tr>
                            </thead>
                            <tbody id="DetailBody">
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>



        </div>
    </div>
</div>


<div class="modal fade" id="AddUserM" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="InstrustionLabel">Instructions</h4>
            </div>

            <div class="modal-body">
               
                <div class="row">
                    <div class="form-group row mb-2">
                      
                        <label class="col-form-label col-sm-4">Select Rank Name</label>
                        <div class="col-sm-8">
                            <i class="fas fa-asterisk mand"></i>
                            <select class=" js-example-basic-single select2 form-control" style="width: 100%;" tabindex="-1" aria-hidden="true" name="ddlRank" required id="ddlRank">
                                <option value="0">Select Rank  Name</option>
                                <option value="1"> Rank  1</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group row mb-2">
                       
                        <label class="col-form-label col-sm-4">Select User Name</label>
                        <div class="col-sm-8">
                            <i class="fas fa-asterisk mand"></i>
                            <input class="form-control" placeholder="Enter User Name" id="txtUserName" />
                        </div>

                    </div>
                    <div class="form-group row mb-2">
                       
                        <label class="col-form-label col-sm-4">Enter Unit Id</label>
                        <div class="col-sm-8">
                            <i class="fas fa-asterisk mand"></i>
                            <input class="form-control" placeholder="UnitId" id="txtUnitId" />
                        </div>

                    </div>
                    <div class="form-group row mb-2">
                       
                        <label class="col-form-label col-sm-4">Enter User Type Id</label>
                        <div class="col-sm-8">
                            <i class="fas fa-asterisk mand"></i>
                            <input class="form-control" placeholder="UnitId" id="UserTypeId" />
                        </div>

                    </div>
                    <div class="form-group row mb-2">
                       
                        <label class="col-form-label col-sm-4">Enter Password</label>
                        <div class="col-sm-8">
                            <i class="fas fa-asterisk mand"></i>
                            <input class="form-control" placeholder="Password" id="txtPassword" />
                        </div>

                    </div>

                    <div class="col-sm-12 text-right">
                        <input type="button" class="btn btn-primary " value="Save" id="btnsave"  />
                    </div>
                    <div class="col-sm-12" id="msg">
                    </div>
                </div>
            </div>

        </div><!-- modal-content -->
    </div><!-- modal-dialog -->
</div>


<script src="~/developerjs/usercreate.js"></script>