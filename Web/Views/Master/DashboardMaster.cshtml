@{
    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header page-header-dark bg-gradient-primary-to-secondary pb-10">
    <div class="containerMain">
        <div class="page-header-content pt-4">
            <div class="row align-items-center justify-content-between">
                <div class="col-auto">
                    <h1 class="page-header-title">
                        <div class="page-header-icon"> <i class="fa fa-bars"></i></div>
                         Dashboard
                    </h1>
                </div>
            </div>

        </div>
    </div>
</header>
<div class="containerMain mt-n10">
    <div class="row">
        <div class="card p-4">
            <div class="row">
                <div class="col-md-2 col-sm-6">
                    <a href="/Master/Unit/&$&&&">
                        <div class="counter red">
                            <div class="counter-icon">
                                <i class="fa fa-address-card"></i>
                            </div>
                            <span class="counter-value" id="TotUnit">0</span>
                            <h3>Unit</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-2 col-sm-6">
                    <a href="/Master/Rank">
                        <div class="counter green">
                            <div class="counter-icon">
                                <i class="fa fa-address-card"></i>
                            </div>
                            <span class="counter-value" id="TotRank">0</span>
                            <h3>Rank</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-2 col-sm-6">
                    <a href="/Master/Appointment">
                        <div class="counter blue">
                            <div class="counter-icon">
                                <i class="fa fa-address-card"></i>
                            </div>
                            <span class="counter-value" id="TotAppointment">0</span>
                            <h3>Appointment</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-2 col-sm-6">
                    <a href="/Master/ArmedType">
                        <div class="counter purple">
                            <div class="counter-icon">
                                <i class="fa fa-address-card"></i>
                            </div>
                            <span class="counter-value" id="TotArms">0</span>
                            <h3>Arms / Service</h3>
                        </div>
                    </a>
                </div>
                <div class="col-md-2 col-sm-6">
                    <a href="/Master/Regimental">
                        <div class="counter pink">
                            <div class="counter-icon">
                                <i class="fa fa-address-card"></i>
                            </div>
                            <span class="counter-value" id="TotRegtCentre">0</span>
                            <h3>Regt Centre</h3>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/developerjs/DashboardMaster.js"></script>