@{
    ViewData["Title"] = "Unit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mb-3 ">
        <div class="card-header">

            <span id="SpnTxnId" class="d-none">0</span>
            @*<span id="PtoId" class="d-none">0</span>*@
            <div class="row">
                <div class="col-xl-12 text-left">
                    <h3>
                        Unit Details
                        <small class="text-muted"></small>


                    </h3>
                </div>


            </div>
        </div>


        <div class="card-body" style="min-height:150px;">
            <div class="row">
                <form action="" id="SaveForm" method="post" name="SaveForm">
                    <div class="row">
                        <span class=" d-none" id="spnUnitId">0</span>
                        <div class="col-sm-4">
                            <div class="form-group row mb-2">
                                <label class="col-form-label col-sm-4">Unit Name<i class="fas fa-asterisk mand1"></i></label>
                                <div class="col-sm-8">
                                    <input class="form-control Alphanumeric" placeholder="Enter Unit" id="txtUnitDesc" required pattern="^[a-zA-Z0-9 ]*$" title="Only Alphabets and Numbers allowed" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group row mb-2">
                                <label class="col-form-label col-sm-5">Unit Abbreviation<i class="fas fa-asterisk mand1"></i></label>
                                <div class="col-sm-7">
                                    <input class="form-control Alphanumeric" placeholder="Enter Abbreviation" id="txtAbbreviation" required pattern="^[a-zA-Z0-9 ]*$" title="Only Alphabets and Numbers allowed" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group row mb-2">
                                <label class="col-form-label col-sm-4">Unit SUS No<i class="fas fa-asterisk mand1"></i></label>
                                <div class="col-sm-8">
                                    <input class="form-control Alphanumeric" placeholder="Enter SUS No" id="txtSusno" minlength="7" maxlength="7" required pattern="^[0-9 ]*$" title="Only Alphabets and Numbers allowed" />
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group row mb-2">
                                <label class="col-form-label col-sm-4">Suffix<i class="fas fa-asterisk mand1"></i></label>
                                <div class="col-sm-8">
                                    <input class="form-control Alphanumeric" placeholder="Enter Suffix" id="txtSuffix" maxlength="1" required pattern="^[a-zA-Z]*$" title="Only Alphabets and Numbers allowed" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="col-sm-12 text-left">
                                <input type="button" class="btn btn-primary " value="Save" id="btnsave" />
                            </div>
                            <div class="col-sm-12" id="msg">
                            </div>
                        </div>
                    </div>
                </form>
               
                <div class="col-xl-12">
                    <div class="mb-2 d-md-flex justify-content-md-between align-items-md-center">
                        <h6 class="mb-3 mb-md-0">
                            @* Total Command <span id="lblTotal" class="ml-3 border border-light b px-2 py-1">0</span> *@
                        </h6>
                        <div class="d-flex">
                           
                            @* <button type="button" id="btnAdd" class="btn btn-outline-success font-weight-600 btn-sm">Add Command</button> *@
                            <button type="button" id="btnMultiDelete" class="btn btn-outline-danger font-weight-600 btn-sm">Delete</button>
                            <input class="btn-outline-light form-control ml-2" placeholder="Search Unit Name" id="txtSerachunit" maxlength="10" pattern="^[a-zA-Z]*$" />

                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table border border-purple table-striped no-footer table-hover" role="grid" id="tbldata">
                            <thead>
                                <tr>
                                    <th class="noExport d-none"></th>
                                    <th class="noExport wd-30-f">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" id="chkAll">
                                            <label class="custom-control-label font-weight-bold" for="chkAll"></label>
                                        </div>
                                    </th>
                                    <th class=" wd-30-f">S No</th>
                                    <th class="nowrap">SUS No</th>
                                    <th class="nowrap">Suffix</th>
                                    <th class="nowrap">Unit Desc</th>
                                    <th class="nowrap">Status</th>
                                    <th class="nowrap">Action</th>


                                </tr>
                            </thead>
                            <tbody id="DetailBody">
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>



        </div>
    </div>
</div>


