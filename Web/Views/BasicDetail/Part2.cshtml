@model BasicDetailUpdVMPart2
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "Part 1";
    ViewBag.Action = "Part2";
}
<div class="row g-3 row-deck mb-3">
    <div class="card mb-4">
        <div class="card-header bg-light">@Html.Partial("_Steps")</div>
        <form enctype="multipart/form-data" asp-controller="BasicDetail" asp-action="Part2" id="Part2" name="Part2" method="post" class="mt-3">
            <div class="card-body">
                <input hidden asp-for="BasicDetailId" />
                <input hidden asp-for="EncryptedId" />
                <div class="row">
                    <div class="col-xl-12">
                        <div class="row mb-3 required">
                            <label asp-for="Rank" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <select asp-for="Rank" class="form-control" asp-items="ViewBag.OptionsRank">
                                </select>
                                <span asp-validation-for="Rank" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="ArmService" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="ArmService" class="form-control" placeholder="INF/ARTY/INT/EME" />
                                <span asp-validation-for="ArmService" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="IdentityMark" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="IdentityMark" class="form-control" placeholder="Only one iden Mk (Max 20 characters incl spaces)" />
                                <span asp-validation-for="IdentityMark" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="Height" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="Height" class="form-control" placeholder="Height in CM" />
                                <span asp-validation-for="Height" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="AadhaarNo" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="AadhaarNo" class="form-control" placeholder="Last Four Digit" maxlength="4" /> @* onkeyup="Aadhaarformate(event,this);" *@
                                <span asp-validation-for="AadhaarNo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="BloodGroup" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <select asp-for="BloodGroup" class="form-control" asp-items="ViewBag.OptionsBloodGroup">
                                </select>
                                <span asp-validation-for="BloodGroup" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="PlaceOfIssue" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-3">
                                <select asp-for="StateId" class="form-control" asp-items="ViewBag.OptionsState" onchange="GetDistrictListByStateId(this.value)">
                                </select>
                                <span asp-validation-for="StateId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-3">
                                @if (Model.Step == 2)
                                {
                                    <select asp-for="DistrictId" asp-items="ViewBag.OptionsDistrict" class="form-control">
                                    </select>
                                }
                                else
                                {
                                    <select asp-for="DistrictId" class="form-control">
                                        <option value="">-- Select District --</option>
                                    </select>
                                }

                                <span asp-validation-for="DistrictId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-2">
                                <textarea asp-for="PlaceOfIssue" rows="1" class="form-control" placeholder="Place Of Issue"></textarea>
                                <span asp-validation-for="PlaceOfIssue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label asp-for="DateOfIssue" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="DateOfIssue" type="date" class="form-control" max="2999-12-31" />
                                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="IssuingAuth" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-4">
                                <input asp-for="IssuingAuth" class="form-control" />
                                <span asp-validation-for="IssuingAuth" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="Signature_" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-8">
                                @if (Model.Step==2)
                                {
                                    <img id="SignaturePath" src=@Model.ExistingSignatureImagePath height="80px" width="100px" />
                                }
                                else
                                {
                                    <img id="SignaturePath" src="~/writereaddata/images/noimage.png" height="80px" width="100px" />
                                }
                                <label class="text-info">(Upload Signature)</label>
                                <input asp-for="Signature_" class="form-control" onchange="beforeUploadSignatureSizeCheck(this)" accept="image/jpeg,image/jpg,image/png,image/gif" />
                                <span id="lblSignature" style="color: red;"></span>
                                <span asp-validation-for="Signature_" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3 required">
                            <label asp-for="Photo_" class="col-sm-3 col-form-label form-label"></label>
                            <div class="col-sm-8">
                                @if (Model.Step == 2)
                                {
                                    <img id="PhotoPath" src=@Model.ExistingPhotoImagePath height="200px" width="200px" />
                                }
                                else
                                {
                                    <img id="PhotoPath" src="~/writereaddata/images/noimage.png" height="200px" width="200px" />
                                }
                                
                                <label class="text-info text-center">(BROWSE & UPLOAD Photograph)</label>
                                <input asp-for="Photo_" class="form-control" onchange="beforeUploadPhotoSizeCheck(this);" accept="image/jpeg,image/jpg,image/png,image/gif" />
                                <span id="lblPhoto" style="color: red;"></span>
                                <span asp-validation-for="Photo_" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Part1" asp-controller="BasicDetail" asp-route-Id="@Model.EncryptedId" class="btn btn-primary">Back</a>
                <button type="submit" class="btn btn-primary">Save & Next</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script asp-src-include="~/js/CustomScript.js"></script>
    }