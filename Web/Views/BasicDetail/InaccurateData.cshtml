@model List<DTOBasicDetailTempRequest>
<div class="container mt-4">
    <div class="card mb-3 ">
        <div class="card-header">
            <div class="row">
                <div class="col-xl-12 text-left">
                    <h3>
                        @ViewBag.Title
                        <small class="text-muted"></small>
                    </h3>
                </div>
            </div>
        </div>
            <div class="card-body" style="min-height:150px;">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="table-responsive">
                            <table id="tbldatatabledata" class="table border border-purple table-striped no-footer dataTable table-hover" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model[0].Sno)</th>
                                        <th>@Html.DisplayNameFor(model => model[0].Name)</th>
                                        <th>@Html.DisplayNameFor(model => model[0].ServiceNo)</th>
                                        <th>@Html.DisplayNameFor(model => model[0].DOB)</th>
                                        <th>@Html.DisplayNameFor(model => model[0].DateOfCommissioning)</th>
                                        @* <th>@Html.DisplayNameFor(model => model[0].PermanentAddress)</th> *@
                                        <th>@Html.DisplayNameFor(model => model[0].Observations)</th>
                                        @*<th>Action</th> *@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string[] rem = null;
                                        if (item.Remarks2 != null)
                                            rem = item.Remarks2.Split("#");

                                        <tr>
                                            <td>@item.Sno</td>
                                            <td>@item.Name</td>
                                            <td>@item.ServiceNo</td>
                                            <td>@(item.DOB.ToString("dd/MMM/yyyy"))</td>
                                            <td>@item.DateOfCommissioning.ToString("dd/MMM/yyyy")</td>
                                           @*  <td>@item.PermanentAddress</td> *@
                                           <td>
                                                <ul >
                                            @if (rem!=null)
                                            {
                                                foreach (var data in rem)
                                                {
                                                            <li >@data</li>
                                                }
                                            }
                                                </ul>
                                            </td>
                                            @*                                 <td>
                                        <div class="d-flex p-2">
                                        <a asp-controller="BasicDetail" asp-action="RegistrationEdit" asp-route-Id="@item.EncryptedId" class="text-primary mr-2"><i class="fas fa-edit fa-lg"></i></a>
                                        </div>

                                        </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
       
    </div>
</div>
@section Scripts{
    <script asp-src-include="~/js/CustomScript.js"></script>
}