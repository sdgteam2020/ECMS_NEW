@model DTORegistrationRequest
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "New Registration";
    ViewBag.Action = "Registration";
}
<style>
    .rowicard .mb-3.required .form-label:after {
        content: "*";
        color: red;
    }
</style>
<div class="container mt-2">
    <div class="card mb-3 ">
        <div class="card-header">

            <span id="SpnTxnId" class="d-none">0</span>
            @*<span id="PtoId" class="d-none">0</span>*@
            <div class="row">
                <div class="col-xl-12 text-left">
                    <h3>
                       I-Card Request
                        <small class="text-muted"></small>


                    </h3>
                </div>


            </div>
        </div>
        <div class="card-body" style="min-height:150px;">
            <div class="row g-3 row-deck mb-3">

                <div class="card p-4">
                    <div class="mt-2">
                        
                    <form id="Reg" name="Reg"method="post">
                   
                        <div class="row">
                        <div class="col-xl-4">
                            <div class="form-group row mb-2">
                                <label asp-for="RegistrationType" class="col-form-label col-sm-6"></label>
                                <div class="col-sm-6">
                                    <select asp-for="RegistrationType" class="form-select" asp-items="ViewBag.OptionsRegistrationType">
                                    </select>
                                    <span asp-validation-for="RegistrationType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4">
                            <div class="form-group row mb-2">
                                <label asp-for="ServiceNumber" class="col-form-label col-sm-6"></label>
                                <div class="col-sm-6">
                                    <input asp-for="ServiceNumber" class="form-control" />
                                    <span asp-validation-for="ServiceNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                            <div class="col-xl-4">
                                <button type="button" class="btn btn-round btn-primary" id="btngetToken">Get ICNO From Token</i></button>
                                <button type="button" id="btngetdata" name="btngetdata" class="btn btn-primary" onclick="getData(this.form.id);">Fetch Data</button>
                        </div>
                    </div>
                   
                    </form>
                    </div>
                </div>
                <div class="card p-4">
                    <div class="mt-2">
                        @* <h5 class="card-title"></h5> *@
                        <div class="row">

                            <form enctype="multipart/form-data" asp-controller="BasicDetail" asp-action="Registration" id="Registration" name="Registration" method="post" class="mt-3">
                                <div class="card-body">
                                    <input hidden asp-for="DOB" />
                                    <input hidden asp-for="DateOfCommissioning" />
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">
                                                <label asp-for="Name" class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <input asp-for="Name" class="form-control" placeholder="Max 36 Characters incl spaces" readonly />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                            </div>
                                            </div>
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">
                                                <label asp-for="ServiceNo" class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <input asp-for="ServiceNo" class="form-control" placeholder="IC-12345X/JC-12345X" readonly />
                                                    <span asp-validation-for="ServiceNo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">

                                                <label asp-for="DOB" class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <input type="text" id="DOB_" name="DOB_" class="form-control" readonly />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">

                                                <label asp-for="DateOfCommissioning " class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <input type="text" id="DOC" name="DOC" class="form-control" readonly />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">

                                                <label asp-for="PermanentAddress" class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <textarea asp-for="PermanentAddress" rows="2" class="form-control" placeholder="" readonly></textarea>
                                                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xl-6">
                                            <div class="form-group row mb-2">
                                                <label asp-for="SubmitType" class="col-form-label col-sm-6"></label>
                                                <div class="col-sm-6">
                                                    <input asp-for="SubmitType" type="radio" value="1" onclick="registrationEnableDisabledField(this.value)" />
                                                    <label>Yes</label>
                                                    <input asp-for="SubmitType" type="radio" value="2" onclick="registrationEnableDisabledField(this.value)" />
                                                    <label>No</label>
                                                    <span asp-validation-for="SubmitType" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-12">
                                        <div class="d-flax text-center">
                                    <button type="submit" id="btn1" name="btn1" class="btn btn-primary" disabled>Proceed</button>
                                    <button type="submit" id="btn2" name="btn2" class="btn btn-primary" disabled>Clear</button>
                                </div> 
                                <div class="col-xl-12 mt-2">
                                            <div class="col-sm-12 text-center">
                                                <div id="tokenmsg" class="d-grid gap-2 col-4 mx-auto">
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                 </div>
                            </form>


                   </div>
                    </div>
                </div>
            </div>
            </div>

    </div>

</div>

@section Scripts{
    <script asp-src-include="~/js/CustomScript.js"></script>
    <script src="~/developerjs/token.js"></script>
    }
    <script>
    $(document).ready(function () {
        $("#RegistrationType").change(function () {
            $("#tokenmsg").html("");
            $("#ServiceNumber").val("");

            if ($("#RegistrationType").val() == 1) {
                $("#btngetToken").removeClass("d-none")
            }
            else {
                $("#btngetToken").addClass("d-none")
                $("#ServiceNumber").val("");
               
            }

        });
        
        $("#btngetToken").click(function () {

            if ($("#RegistrationType").val() == 1) {

                GetTokenDetails("FetchUniqueTokenDetails", "ServiceNumber");

            }
            else {
                toastr.error('Please Select Category !');

            }
        });

    });
    </script>