@model DTORegistrationRequest
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Title = "New Registration";
    ViewBag.Action = "Registration";
}
<style>
    .row .mb-3.required .form-label:after {
        content: "*";
        color: red;
    }
</style>
<div class="container mt-2">
    <div class="row g-3 row-deck mb-3">
        <div class="card mb-4">
            <div class="card-header">
                <div class="row">
                    <div class="col-xl-12 text-left">
                        <h4>
                            Request to Fetch Data
                            <small class="text-muted"></small>
                        </h4>
                    </div>
                </div>
            </div>
            <form id="Reg" name="Reg">
                <div class="card-body">
                    <div class="row mb-3 required">
                        <label asp-for="RegistrationType" class="col-sm-3 col-form-label form-label"></label>
                        <div class="col-sm-4">
                            <select asp-for="RegistrationType" class="form-control" asp-items="ViewBag.OptionsRegistrationType">
                            </select>
                            <span asp-validation-for="RegistrationType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3 required">
                        <label asp-for="ServiceNumber" class="col-sm-3 col-form-label form-label"></label>
                        <div class="col-sm-4">
                            <input asp-for="ServiceNumber" class="form-control" />
                            <span asp-validation-for="ServiceNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="button" id="btngetdata" name="btngetdata" class="btn btn-primary" onclick="getData(this.form.id);">Fetch Data</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-3 row-deck mb-3">
        <div class="card mb-2">
            <form enctype="multipart/form-data" asp-controller="BasicDetail" asp-action="Registration" id="Registration" name="Registration" method="post" class="mt-3">
                <div class="card-body">
                    <input hidden asp-for="DOB" />
                    <input hidden asp-for="DateOfCommissioning" />
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="row mb-3 required">
                                <label asp-for="Name" class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="Name" class="form-control" placeholder="Max 36 Characters incl spaces" readonly />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 required">
                                <label asp-for="ServiceNo" class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="ServiceNo" class="form-control" placeholder="IC-12345X/JC-12345X" readonly />
                                    <span asp-validation-for="ServiceNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 required">
                                <label asp-for="DOB" class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <input type="text" id="DOB_" name="DOB_" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row mb-3 required">
                                <label asp-for="DateOfCommissioning " class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <input type="text" id="DOC" name="DOC" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="row mb-3 required">
                                <label asp-for="PermanentAddress" class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <textarea asp-for="PermanentAddress" rows="2" class="form-control" placeholder="" readonly></textarea>
                                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 required">
                                <label asp-for="SubmitType" class="col-sm-3 col-form-label form-label"></label>
                                <div class="col-sm-4">
                                    <input asp-for="SubmitType" type="radio" value="1" />
                                    <label>I am agree.</label>
                                    <br />
                                    <input asp-for="SubmitType" type="radio" value="2" />
                                    <label>I am not agree.</label>
                                    <span asp-validation-for="SubmitType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" asp-controller="BasicDetail" class="btn btn-primary">Back To Index</a>
                    <button type="submit" class="btn btn-primary">Proceed</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script asp-src-include="~/js/CustomScript.js"></script>
    }
