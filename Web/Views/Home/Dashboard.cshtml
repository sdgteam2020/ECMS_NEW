    ViewData["Title"] = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container1">

    <div class="row">
       
            <div class="card p-4">
            <div class="row">
                <div class="col-md-2 col-sm-6">
                    <div class="counter pink">
                        <div class="counter-icon">
                           
